mixin coin(imgSrc, coin, type)
	div.coin_wrap
		.photo(style="background-image: url('"+imgSrc+"')")
		.detail
			h5.f26 累積健康幣
			.coin.f70 #{coin}

		if type==='goDraw'
			+btn('goDraw')
				p.f34
					| 馬上抽
		else
			+btn('small')
				p.f34
					| 存健康幣
					br
					| 立即抽獎



mixin btn(type)
	div.btn(class=type)
		block


mixin ads
	.ads
		.sub_title.f26 獎項
		block


