extends layouts/_layout.pug
include mixins/components.pug

block variables
	- var showHomeIcon = false;

block title
	title 一天一杯克寧 存健康拿好禮


block content
		+coin('images/userphoto.png', 140)
		.btn_area
			+btn
				a(href="upload.html")
					p.f34 上傳照片拿金幣
			+btn
				p.f34 存健康拿好禮

		.achieve
			img(src="images/title_medal.svg", alt="")
			ul
				li
					img(src="images/medal_3day_no.png", alt="")
					.detail
						h6.title.f32 勤奮努力獎
						p.des.f28
							| 連續3天上傳
							font (3/3)
						p.coin.f32 x 3
